{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "rollup.config.ts",
    "rollup.dts.config.ts",
    "rollup-plugins.ts",
    "typings"
  ],
  "exclude": ["node_modules"]
}
